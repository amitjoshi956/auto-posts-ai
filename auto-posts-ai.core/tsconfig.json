/* Visit https://aka.ms/tsconfig to read more about this file */
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "sourceMap": false,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@const/*": ["./src/const/*"]
    }
  },
  "include": ["src/**/*", "global.d.ts"]
}
