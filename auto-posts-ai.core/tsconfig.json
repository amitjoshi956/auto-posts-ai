/* Visit https://aka.ms/tsconfig to read more about this file */
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "paths": {
      "@routes/*": ["./src/routes/*"],
      "@base/*": ["./src/base/*"],
      "@bootup/*": ["./src/bootup/*"],
      "@model/*": ["./src/model/*"],
      "@middleware/*": ["./src/middleware/*"]
    }
  },
  "include": ["src/**/*"]
}
