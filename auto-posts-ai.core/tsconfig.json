/* Visit https://aka.ms/tsconfig to read more about this file */
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "paths": {
      "@src/*": ["./src/*"],
      "@routes/*": ["./src/routes/*"],
      "@const/*": ["./src/const/*"],
      "@bootup/*": ["./src/bootup/*"],
    }
  },
  "include": ["src/**/*", "global.d.ts"]
}
