{
  "compilerOptions": {
    "module": "NodeNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "lib": ["ESNext"],
    "paths": {
      "@src/*": ["./src/*"],
      "@routes/*": ["./src/routes/*"],
      "@jobs/*": ["./src/jobs/*"]
    }
  },
  "compileOnSave": true, 
  "include": ["src", "global.d.ts"]
}
